@{
    ViewData["Title"] = "Add table to database";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <div class="container">
        <form method="post" action="~/Home/Table">

            <table>
                <tr>
                    <td><label for="tname">Table name</label></td>
                    <td><input required type="text" name="tablename" placeholder="name"> </td>
                </tr>
                <tr>
                    <td> <label for="fieldsnumb">Number of fields in table</label></td>
                    <td><input required type="number" name="fieldsnumber" placeholder="number"></td>
                </tr>
                <tr>
                    <td>
                        <input type="submit" value="Continue">
                    </td>
                    <td></td>
                </tr>
            </table>
        </form>
    </div>
</body>
</html>